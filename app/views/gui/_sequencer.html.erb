
<div id="sequence-length-container">
	<input id="sequence-length">
</div>

<div class="sequencer">
	<% 16.times do |i| %>

		<div class="step" id="<%="step#{i}"%>">
		<div class="step-slider" id="<%= "step#{i}_slider"%>"></div>
			<%= check_box_tag "step#{i}_checkbox", i, false, {class: "step-checkbox", title: "clicking this box adds or removes a hit at this step for the active drum"}%>
		</div>

	<% end %>
</div>

<div class="sequencer">
	<% 16.times do |d| %>
	<% i = d+16 %>
		<div class="step" id="<%="step#{i}"%>">
		<div class="step-slider" id="<%= "step#{i}_slider"%>"></div>
			<%= check_box_tag "step#{i}_checkbox", i, false, {class: "step-checkbox", title: "clicking this box adds or removes a hit at this step for the active drum"}%>
		</div>

	<% end %>
</div>